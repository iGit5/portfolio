{% extends 'admin.html.twig' %}

{% block stylesheet %}

  {% stylesheets
  "assets/adminlte/plugins/datatables/dataTables.bootstrap.css"
%}
  <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}

{% endblock %}


{%  block content %}
<!-- Content Wrapper. Contains page content -->
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Liste des articles
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><a href="#">Voir</a></li>
      <li class="active">Articles</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Articles</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
              <thead>
              <tr>
                <th>Titre de l'article</th>
                <th>Update</th>
              </tr>
              </thead>
              <tbody>
              {% for article in articles %}
                  <tr>
                    <td>{{ article.name }}</td>
                    <td><a href="{{ path('article_edit', {'id': article.id}) }}"><button type="button" class="btn btn-primary">Update</button></a></td>
                  </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->


        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->

<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
{%  endblock %}

{%  block javascripts %}
{% javascripts
"assets/adminlte/plugins/datatables/jquery.dataTables.min.js"
"assets/adminlte/plugins/datatables/dataTables.bootstrap.min.js"
%}


<script src="{{ asset_url }}"></script>
{% endjavascripts %}
{%  endblock %}
